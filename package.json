{
    "type": "module",
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "format": "prettier --write . | grep -v 'unchanged'",
        "lint": "eslint .",
        "migrate": "prisma migrate dev",
        "start": "node dist/index.js"
    },
    "imports": {
        "#controllers": "./dist/controllers/index.js",
        "#error": "./dist/error.js",
        "#middleware": "./dist/middleware/index.js",
        "#repositories": "./dist/repositories/index.js",
        "#routes": "./dist/routes/index.js",
        "#schemas": "./dist/schemas/index.js",
        "#services": "./dist/services/index.js"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "cryptr": "^6.3.0",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-async-errors": "^3.1.1",
        "http-status": "^2.0.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "node": "^22.10.0",
        "prisma": "^5.21.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.8.4",
        "eslint": "^9.13.0",
        "globals": "^15.11.0",
        "prettier": "^3.3.3",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.12.2"
    }
}
